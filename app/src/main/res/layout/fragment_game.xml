<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:LuckyWheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_two"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bluehomestudio.luckywheel.LuckyWheel
       android:layout_width="300dp"
       android:layout_height="300dp"
       android:id="@+id/lucky"
       android:layout_centerInParent="true"
       app:image_padding="20dp"
       LuckyWheel:background_color="@color/purple_200"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="161dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="67dp"
        android:background="@color/black"
        android:text="spin"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="271dp"
        android:layout_height="50dp"
        android:layout_above="@+id/lucky"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="14dp"
        android:text="     GOOD LUCK!!"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_above="@+id/lucky"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="65dp"
        android:fontFamily="@font/poppins"
        android:text="Win exciting prizes and opportunity to meet your favourite player "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>